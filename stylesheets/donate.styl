@import 'variables' 

img
  float: left
  margin: 22px 12px 0 0

p
  font-size: 18px;
  line-height: 24px
  margin: 24px 0

.bitcoin, .fiat
  padding: 24px;
  border: 1px solid #cccccc;
  width: 296px;
  border-top: 4px solid RED;
  float: right

.fiat
  width: 540px
  float: left
  height: 323px

  .third
    overflow: hidden   
 
    section
      width: 33%
      float: left

  form
    margin: 24px 0 12px 0
    
    label
      display: block
      color: RED
      margin: 12px 0

    input, .bt-ctr
      font-size: 16px
      padding: 8px 0
      border: none

    input[type='submit']
      display: block
      margin: 24px 0
      width: 200px
      padding: 18px
      color: #FFFFFF
      background: #859900
      font-weight: bold
      border-bottom: 1px solid green

      &:hover
        cursor: pointer
        background: #959900

      &:active
        border-bottom: none
        border-top: 1px solid green

    .bt-ctr
      height: 19px
      margin-bottom: 14px

.bitcoin
  pre
    text-align: center
    padding: 12px
    margin: 0 12px 12px 12px
    background: #f6f6f6
    border-radius: 4px
