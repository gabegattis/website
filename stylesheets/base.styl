@import 'variables'

@font-face
  font-family: 'I pixel u'
  src: url('/fonts/I-pixel-u.ttf')

@font-face
  font-family: 'Roboto'
  font-weight: normal
  src: url('/fonts/Roboto-Regular.ttf')

@font-face
  font-family: 'Roboto'
  font-weight: bold
  src: url('/fonts/Roboto-Bold.ttf')

*
  margin: 0

html, body
  height: 100%
  font-family: 'Roboto'

.container
  width: 960px
  margin: auto
  overflow: hidden

.shade
  padding: 48px 0
  position: relative
  top: 0
  bottom: 0
  left: 0
  right: 0
  background: rgba(0, 0, 0, 0.8)

h2
  font-family: 'Roboto'
  color: GRAY
  font-size: 28px
  border-bottom: 1px solid RED
  padding-bottom: 12px
  margin: 24px 0

header
  overflow: hidden
  border-bottom: 1px solid #d2d2d2

  nav
    float: right
    
    ul
      margin: 0
      padding: 0
      list-style-type: none

      li
        float: right
        
        a
          display: block;
          padding: 22px 12px;
          margin: 0 12px;
          text-decoration: none;
          color: GRAY;
          font-family: sans-serif;
          
          &:hover
            color: RED
            border-bottom: 2px solid RED

  #logo
    float: left
    font-family: 'I pixel u'
    font-size: 48px
    font-weight: normal
    padding: 12px 12px 12px 86px
    margin: 0
    height: 42px
    background: url('/img/logo.png') 12px center no-repeat
    background-size: 58px 58px

    a
      text-decoration: none

    span
      position: relative
      top: -18px

    .primary
      color: RED

    .secondary
      color: GRAY

.wrapper
  min-height: 100%
  margin: 0 auto -205px

.push, footer
  height: 205px

footer
  font-family: 'Roboto'
  margin-top: 24px
  box-shadow: inset 0 3px 5px #d2d2d2
  padding-top: 24px
  background: #f6f6f6  
 
  .container
    padding-bottom: 24px

  ul
    margin: 12px 0
    padding: 0
    list-style-type: none
    text-align: center    

    li
      display: inline-block

      a
        text-decoration: none
        color: #000000
        font-size: 18px
        margin: 0 8px

        &:hover
          text-decoration: underline
        

.copyleft
  font-family: 'Roboto'
  text-align: center
  
  .container
    padding: 12px
    border-top: 1px solid #E2E2E2

  p
    margin: 12px 0

  a
    color: #000000

  .licenses a
    font-family: monospace
    display: inline-block
    margin: 0 6px
    font-size: 14px
    text-decoration: none

    &:hover
      text-decoration: underline
